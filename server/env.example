# ============================================
# CONFIGURACIÓN: LOCAL vs NUBE
# ============================================
# Cambia entre 'local' o 'cloud'
DEPLOYMENT_MODE=local

# ============================================
# BASE DE DATOS - CONFIGURACIÓN LOCAL
# ============================================
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=5432
DB_NAME_LOCAL=pbex_quality_db
DB_USER_LOCAL=postgres
DB_PASSWORD_LOCAL=tu_contraseña_local

# ============================================
# BASE DE DATOS - CONFIGURACIÓN NUBE
# ============================================
DB_HOST_CLOUD=tu-servidor-postgresql.com
DB_PORT_CLOUD=5432
DB_NAME_CLOUD=pbex_quality_db
DB_USER_CLOUD=tu_usuario_cloud
DB_PASSWORD_CLOUD=tu_contraseña_cloud

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# ============================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ============================================
# Si no configuras email, el sistema funcionará sin notificaciones por correo
# Para usar email, configura las siguientes variables:
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=ventas@pbex.com.pe
MAIL_PASSWORD=tu_contraseña_email
MAIL_FROM=ventas@pbex.com.pe
MAIL_FROM_NAME=Sistema Pbex

# ============================================
# CONFIGURACIÓN DE PUPPETEER (PDF)
# ============================================
PUPPETEER_EXECUTABLE_PATH=
# Dejar vacío para usar el Chromium incluido
# O especificar ruta a Chrome/Chromium instalado

# ============================================
# CONFIGURACIÓN DE ALERTAS
# ============================================
ALERT_DEFAULT_THRESHOLD=5.0
# Porcentaje de merma por defecto que activa alertas

